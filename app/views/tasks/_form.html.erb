<div class="container">
  <%= form_for(task) do |f| %>
    <%= f.label :title %><br>
    <%= f.text_field(:title, size: '110%') %><br>
    <br>
    <%= f.label :details %><br>
    <%= f.text_area(:details, size: '100x10') %><br>
    <br>
    <% unless task.new_record? %>
      <%= f.label :completed %><br>
      <%= f.check_box :completed %><br>
    <% end %>
    <br>
    <%= f.submit %>
  <% end %>
</div>
