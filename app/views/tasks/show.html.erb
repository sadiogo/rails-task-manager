<div class="container">
  <div class="task-header">
    <h2><%= @task.title %></h2>
    <%= link_to edit_task_path(@task.id), id: "edit-btn" do %>
      <i class="fas fa-pencil-alt"></i><span> Edit task</span>
    <% end %>
  </div>
  <p class="details"><%= @task.details %></p>
  <input type="checkbox" id="completed" <%= @task.completed ? "checked" : "" %> onclick="this.checked=!this.checked;">
  <label for="completed"><%= @task.completed ? "This task is completed" : "This task is not completed yet" %></label>
  <br><br>
  <hr>
  <br>
  <%= link_to "Back to list", tasks_path %>
</div>